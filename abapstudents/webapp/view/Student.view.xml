<mvc:View
    controllerName="abapstudents.controller.Student"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:mdc="sap.ui.mdc"
    height="100%">

    <Page
        title="{Studentid} - {Name}">
        <!-- showNavButton="true"
        navButtonPress="onNavBack" -->

        <content>
            <!-- Student Details Section -->
            <Panel headerText="{i18n>studentDetail.panelTitle}" expandable="true" expanded="false">
                <form:SimpleForm
                    layout="ResponsiveGridLayout"
                    labelSpanL="4"
                    columnsL="1"
                    editable="false">

                    <form:content>
                        <!-- <Label text="{i18n>studentDetail.labelStudentId}" labelFor="studentid"
                        />
                        <Text id="studentid" text="{Studentid}" /> -->

                        <Label text="{i18n>studentDetail.labelName}" labelFor="name" />
                        <Text id="name" text="{Name}" />

                        <Label text="{i18n>studentDetail.labelGender}" labelFor="gender" />
                        <Text id="gender" text="{Gender}" />

                        <Label text="{i18n>studentDetail.labelDegree}" labelFor="degree" />
                        <Text id="degree" text="{Degree}" />

                        <Label text="{i18n>studentDetail.labelConsole}" labelFor="console" />
                        <Text id="console" text="{Console}" />
                    </form:content>
                </form:SimpleForm>
            </Panel>

            <!-- Favourite Games Section -->
            <Panel
                headerText="{i18n>studentDetail.favouriteGamesTitle}"
                expandable="true"
                expanded="true"
                class="sapUiResponsiveContentPadding">

                <Table
                    id="gamesList"
                    items="{path: 'cds>/ZAS_113_C_GAMES', model: 'cds'}"
                    width="auto"
                    inset="false"
                    class="sapUiResponsiveMargin"
                    noDataText="{i18n>gamesTable.noDataText}"
                    growing="true"
                    growingThreshold="10">

                    <headerToolbar>
                        <Toolbar>
                            <Label text="{i18n>gamesTable.filterLabel}"
                                labelFor="multiInput" />
                            <MultiInput
                                id="multiInput"
                                width="60%"
                                placeholder="{i18n>gamesTable.filterPlaceholder}"
                                valueHelpRequest=".onValueHelpRequested"
                                suggestionItemSelected=".onSuggestionItemSelected"
                                suggestionRows="{
				path: 'cds>/ZAS_113_C_GAMES',
				length: 600
			}">
                                <suggestionColumns>
                                    <Column>
                                        <Label text="Game Title" />
                                    </Column>
                                    <Column>
                                        <Label text="Game Genre" />
                                    </Column>
                                    <Column>
                                        <Label text="Game Platform" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label text="{cds>Name}" />
                                        <Label text="{cds>Genre}" />
                                        <Label text="{cds>Platform}"/>
                                    </ColumnListItem>
                                </suggestionRows>
                            </MultiInput>
                            <Button text="{i18n>gamesTable.actions.addGame}"
                                type="Emphasized"
                                press="onPressAddGame" />
                        </Toolbar>
                    </headerToolbar>

                    <columns>
                        <!-- <Column>
                            <Text text="{i18n>gamesTable.columnGameId}" />
                        </Column> -->
                        <Column>
                            <Text text="{i18n>gamesTable.columnName}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>gamesTable.columnGenre}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>gamesTable.columnPublisher}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>gamesTable.columnPlatform}" />
                        </Column>
                        <!-- <Column>
                            <Text text="{i18n>gamesTable.columnReleaseDate}" />
                        </Column> -->
                        <!-- <Column>
                            <Text text="{i18n>gamesTable.columnCover}" />
                        </Column> -->
                        <Column>
                            <Text text="{i18n>gamesTable.columnActions}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <!-- <Text text="{cds>GameID}" /> -->
                                <Text text="{cds>Name}" />
                                <Text text="{cds>Genre}" />
                                <Text text="{cds>Publisher}" />
                                <Text text="{cds>Platform}" />
                                <!-- <Text
                                    text="{
                                                path: 'cds>ReleaseDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: { pattern: 'dd-MM-yyyy' }
                                            }" /> -->
                                <!-- <Link text="{i18n>gamesTable.cover.linkText}"
                                    href="{cds>CoverUrl}" target="_blank" /> -->
                                <HBox class="sapUiSmallMarginEnd">
                                    <Button
                                        icon="sap-icon://information"
                                        tooltip="{i18n>gamesTable.button.details.tooltip}"
                                        type="Transparent"
                                        press="handleDetailPress"
                                    />
                                    <Button icon="sap-icon://delete"
                                        type="Transparent"
                                        tooltip="{i18n>studentsTable.button.delete.tooltip}"
                                        press="onPressRemoveGame" />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>