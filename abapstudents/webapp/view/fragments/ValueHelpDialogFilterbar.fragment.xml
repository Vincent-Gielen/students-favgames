<core:FragmentDefinition
  xmlns="sap.ui.comp.valuehelpdialog"
  xmlns:m="sap.m"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:core="sap.ui.core">
  <ValueHelpDialog
    title="{i18n>valuehelp.title}"
    ok=".onValueHelpOkPress"
    cancel=".onValueHelpCancelPress"
    afterClose=".onValueHelpAfterClose"
    supportRanges="true"
    key="GameID"
    descriptionKey="Name">
    <filterBar>
      <fb:FilterBar advancedMode="true" search=".onFilterBarSearch"
        isRunningInValueHelpDialog="true">
        <fb:filterGroupItems>
          <!-- <fb:FilterGroupItem
            groupName="__$INTERNAL$"
            name="GameID"
            label="Game ID"
            visibleInFilterBar="true">
            <fb:control>
              <m:Input name="GameID" />
            </fb:control>
          </fb:FilterGroupItem> -->
          <fb:FilterGroupItem
            groupName="__$INTERNAL$"
            name="Name"
            label="{i18n>valuehelp.label.title}"
            visibleInFilterBar="true">
            <fb:control>
              <m:Input name="Name" />
            </fb:control>
          </fb:FilterGroupItem>
          <fb:FilterGroupItem
            groupName="__$INTERNAL$"
            name="Genre"
            label="{i18n>valuehelp.label.genre}"
            visibleInFilterBar="true">
            <fb:control>
              <m:Input name="Genre" />
            </fb:control>
          </fb:FilterGroupItem>
          <fb:FilterGroupItem
            groupName="__$INTERNAL$"
            name="Platform"
            label="{i18n>valuehelp.label.platform}"
            visibleInFilterBar="true">
            <fb:control>
              <m:Input name="Platform" />
            </fb:control>
          </fb:FilterGroupItem>
        </fb:filterGroupItems>
      </fb:FilterBar>
    </filterBar>
  </ValueHelpDialog>
</core:FragmentDefinition>