<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Popover
		id="myPopover"
		title="{cds>GameID}. {cds>Name}"
		titleAlignment="Center"
		placement="Auto"
		contentWidth="500px"
	>
		<content >
			<VBox class="sapUiSmallMargin">
				<HBox>
					<Title text="Genre:" level="H5" class="sapUiTinyMarginEnd sapUiSmallMarginBottom" />
					<Text text="{cds>Genre}" />
				</HBox>

				<HBox>
					<Title text="Platform:" level="H5" class="sapUiTinyMarginEnd sapUiSmallMarginBottom" />
					<Text text="{cds>Platform}" />
				</HBox>

				<HBox>
					<Title text="Publisher:" level="H5" class="sapUiTinyMarginEnd sapUiSmallMarginBottom" />
					<Text text="{cds>Publisher}" />
				</HBox>

				<HBox>
					<Title text="Release Date:" level="H5" class="sapUiTinyMarginEnd sapUiSmallMarginBottom" />
					<Text
						text="{
						path: 'cds>ReleaseDate',
						type: 'sap.ui.model.type.Date',
						formatOptions: { pattern: 'dd-MM-yyyy' }
					}"
					/>
				</HBox>

				<VBox class="sapUiSmallMarginBottom">
					<Title text="Cover:" level="H5" />
					<Image
						src="{cds>CoverUrl}"
						width="150px"
						densityAware="false"
						alt="Game Cover"
					/>
				</VBox>

				<VBox class="sapUiSmallMarginBottom">
					<Title text="Description:" level="H5" />
					<Text text="{cds>Description}" />
				</VBox>
			</VBox>
		</content>
	</Popover>
</core:FragmentDefinition>